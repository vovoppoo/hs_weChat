page {
  background-color: white;
}

.title-row {
  font-size: 40rpx;
  padding: 20rpx 20rpx 0;
  font-weight: bold;
}

.input-row {
  padding: 20rpx 30rpx;
}

.input-row .button {
  padding: 20rpx 0;
  margin: 40rpx 0 0;
  background-color: #0DD3B0;
  color: white;
  border-radius: 10rpx;
  border: 1rpx solid #0DD3B0;
  text-align: center;
}


.input-row .button.lu {
  color: #0DD3B0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #F4F7FD;
  border-color: #F4F7FD;
}

.input-row .button.lu image {
  width: 28rpx;
  height: 36rpx;
  padding-right: 10rpx;
}

.spend {
  line-height: 28rpx;
}

.input-row .button.lu .spend image {
  width: 36rpx;
  height: 36rpx;
  padding-right: 10rpx;
}


.input-row .label {
  padding: 20rpx 0 10rpx;
  display: flex;
}

.input-row .label .red-icon {
  color: tomato;
}

.input-row .input-item {
  padding: 10rpx 0;
  background-color: white;
  border-bottom: 1rpx solid #E4E2E2;
}

.input-item textarea {
  height: 120rpx;
  width: 100%;
}

.input-row .plye-view {
  text-align: center;
  padding: 20rpx 0 10rpx;
}

.input-row .plye-view .audio-row {
  display: flex;
  align-items: center;
}

.audio-tis {
  display: flex;
  align-items: center;
}

.audio-tis .time {
  width: 94rpx;
}

.audio-tis image {
  width: 50rpx;
  height: 50rpx;
  padding-left: 10rpx;
}

.audio-row .audio-button {
  color: #0DD3B0;
  border: 2rpx solid #0DD3B0;
  padding: 2rpx 2rpx;
  border-radius: 12rpx;
  margin-right: 6rpx;
  background-color: #F4F7FD;
  display: flex;
}

.audio-row .audio-button image {
  width: 60rpx;
  height: 60rpx;
}

.audio-row .slider-item {
  width: 66%;
}

.audio-row .slider-item slider {
  padding: 10rpx;
  margin: 10rpx 10rpx;
}

.input-row .input-item .wx-input {
  padding-bottom: 10rpx;
}


.input-row .input-item .radio-row {
  display: flex;
}

.input-row .input-item .radio-row label {
  display: flex;
  padding-right: 20rpx;
}

.picker {
  width: 400rpx;
  height: 52rpx;
  font-size: 28rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
}

.tz-view {
  padding: 30rpx;
}

.tz-view .tz-title {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #E4E2E2;
}

.add-button {
  color: #0DD3B0;

}

.tz-view .tz-row {
  display: flex;
  align-items: center;
  padding: 20rpx 10rpx 20rpx 0rpx;
  margin-left: 60rpx;
  border-bottom: 1rpx solid #E4E2E2;
}

.tz-view .tz-row.item {
  margin-top: 20rpx;
  border-top: 8rpx solid #0DD3B0;
}

.tz-view .tz-row.text {
  flex-direction: column
}

.tz-view .tz-row.text textarea {
  height: 80rpx;
}

.tz-view .tz-row.text .row-label {
  width: 100%;
  text-align: left;
}
.tz-view .tz-row.text .row-value {
  padding-top: 20rpx;
}

.bottom-row {
  margin-bottom: 10rpx;
}

.tz-view .tz-row .row-label {
  text-align: right;
}

.tz-view .tz-row .row-value {
  display: flex;
  align-items: center;
  padding-left: 10rpx;

}

.tz-view .tz-row .row-value input {

  padding-left: 50rpx;

}

.tz-view .tz-row .row-value radio-group {
  display: flex;
  align-items: center;
  padding-left: 40rpx;
}

.tz-view .tz-row .row-value radio-group label {
  display: flex;
  align-items: center;
  padding-left: 40rpx;
}