<view class="tz-view">
	<view class="tz-title" style="justify-content: space-between;">
		<View style="display:flex">
			<switch disabled="{{hstype==='2'}}" type="checkbox" data-name="fzType" checked="{{fzType}}" bindchange="switchChange" />
			<view>分支跳转</view>
		</View>
		<View wx:if="{{fzType}}" class="add-button" catchtap="addFZTZFn">
			+分支
		</View>

	</view>
	<block wx:if="{{fzType}}">
		<block wx:for="{{FZTZArr}}" wx:key="index">

			<view class="tz-row item">
				<view class="row-label">跳转路径:</view>
				<view class="row-value">
					<picker disabled="{{hstype==='2'}}" mode="multiSelector" bindchange="bindMultiPickerChange" data-index="{{index}}" data-tzId="tzIdFZ"
						data-tzName="tzNameFZ" data-valueArr="multiIndexFZ" data-name="tzTypeFZ" range-key="moduleName"
						bindcolumnchange="bindMultiPickerColumnChange" value="{{item.multiIndexFZ}}" range="{{multiArray}}">
						<view class="picker">
							{{item.tzNameFZ}}
						</view>
					</picker>
				</view>
			</view>
			<view class="tz-row text">
				<view class="row-label">关键字:</view>
				<view class="row-value">
					<textarea disabled="{{hstype==='2'}}" class="weui-input" data-index="{{index}}" value="{{item.keyWordFZ}}" data-name="keyWordFZ"
						maxlength="20" bindblur="bindInputChange" placeholder="填写关键字" />
				</view>
			</view>
			<view class="tz-row bottom-row">
				<view class="row-label">评级:</view>
				<view class="row-value">
					<block wx:if="{{hstype==='1'}}">
					<radio-group data-list='itemsTz' data-name="levelFZ" data-index="{{index}}" bindchange="radioChange">
						<label class="weui-cell weui-check__label" wx:for="{{item.itemsTz}}" wx:for-item="checkedItem"
							wx:key="value">

							<view class="weui-cell__hd">
								<radio value="{{checkedItem.value}}" checked="{{checkedItem.checked}}" />
							</view>
							<view class="weui-cell__bd">{{checkedItem.name}}</view>
						</label>
					</radio-group>
					</block>
					<block wx:else>
					<view style="padding-left :20rpx"></view>
					{{item.levelFZ}}
				</block>
				</view>
			</view>
		</block>

	</block>
</view>







