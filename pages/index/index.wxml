      </view>
      <view class="nav-row-view">
        <view class="nav-row">
          <view class="nav-item" data-url="/pages/user-wallet/user-wallet" data-type="1">
            <view class="item-number" bindtap="get_data">
              {{residueTime}}
            </view>
            <text>剩余分钟</text>
          </view>
          <view class="nav-item button" data-url="/pages/user-integral/user-integral" data-type="1">
            <view class="button-cz" bindtap="navigation_event" data-url="/pages/index/index/recharge/recharge"
              data-type="1" data-name="余额充值">
