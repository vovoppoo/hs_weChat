            </view>

          </view>
        </view>
      </view>
      <view class="user-menu-view">
        <view class="item-view">
          <view class="item-row">

            <view class="menu-item" bindtap="navigation_event"
              data-url="/pages/index/index/recharge-record/recharge-record" data-type="1" data-name="资金记录">
              <view>
                <image src="/style/iconfont/money-list.png"></image>
              </view>
              <view>
                资金记录
              </view>
            </view>
            <!-- <view class="menu-item" bindtap="navigation_event" data-url="/pages/index/index/recharge/recharge"
              data-type="1" data-name="我的消息"> -->
