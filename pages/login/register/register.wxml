<view class="main-page">
	<view class="login-view">

		<view class="title-row">
			注册
		</view>
		<block wx:if="{{step == 1}}">
			<view class="input-row">
				<view class="phone-button">

					<block wx:if="{{showInput}}">

						<button plain open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">
							<view wx:if="{{account===''}}" class="input-tis">
								手机号/账号
							</view>
							<view wx:else>
								{{account}}
							</view>
						</button>
					</block>

					<block wx:else>
						<input class="weui-input" focus data-name="captcha" type="number" value="{{captcha}}" maxlength="20"
							bindinput="bindInputChange" placeholder="手机号/账号" />
					</block>


				</view>
			</view>
			<view class="input-row flex ">
				<input class="weui-input" data-name="captcha" type="number" maxlength="20" bindinput="bindInputChange"
					placeholder="请输入短信验证码" />
				<view class="button {{buttonText!=='获取验证码'?'hei':'bai'}}">
					<button catchtap="getCaptchaFn">{{buttonText}}</button>
				</view>
			</view>
			<view class="button-row">
				<button catchtap="goSetPassworddFn">下一步</button>
			</view>
		</block>

		<block wx:if="{{step == 2}}">
			<view class="input-row">
				<input class="weui-input" type="password" data-name="password" minlength="6" maxlength="20"
					bindblur="bindInputChange" placeholder="密码 6-20字母、数字组合" />
			</view>
			<view class="input-row">
				<input class="weui-input" type="password" data-name="platformPassword" maxlength="20"
					bindinput="bindInputChange" placeholder="确认密码" />
			</view>

			<view class="button-row">
				<button disabled="{{!radioValue}}" catchtap="goRegisterFn">同意以下协议并注册</button>
			</view>
			<view class="login-foot">
				<view class="foot-left">
					<view>
						<checkbox-group bindchange="checkboxChange">
							<checkbox value="{{radioValue}}" checked="{{radioValue}}" />
						</checkbox-group>
					</view>
					请仔细阅读
					<view class="cilck-color">
						《语音机器人注册协议》
					</view>

				</view>
				<view class="foot-right">
					<!-- 注册 -->
				</view>
			</view>
		</block>


	</view>

</view>