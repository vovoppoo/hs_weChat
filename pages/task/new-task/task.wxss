.page-navbar {
  /* height: 240rpx; */
  position: relative;
}

.page-navbar .navber-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 40rpx 20rpx;
}

.page-navbar .button-item {
  display: flex;
  padding-top: 14rpx;
}




.page-navbar .left-menu {
  width: 80%;
}

.page-navbar .add-button {
  /* position: absolute;
  right: 38rpx;
