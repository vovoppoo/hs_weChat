.page-navbar {
  height: 200rpx;
  background-color: #0DD3B0;
  display: flex;
  align-items: flex-end;
  position: relative;
  margin-bottom: 40rpx;
}

.page-navbar .add-button {
  position: absolute;
  right: 30rpx;
  top: 50rpx;
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid white;
  border-radius: 50rpx;
  font-size: 44rpx;
  text-align: center;
  line-height: 37rpx;
  color: white;
}

.page-navbar .left-menu {
  width: 88%;
  position: relative;
  padding-bottom: 74rpx;
}

.page-navbar .left-menu .search {
  margin: 20rpx 20rpx 20rpx 50rpx;
  background-color: white;
  border: 1rpx solid #0DD3B0;
  padding: 5rpx 20rpx;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  height: 60rpx;
}


.page-navbar .left-menu input {
  width: 100%;
}

.left-menu .search .icon {
  height: 34rpx;
  padding-right: 10rpx;
}


.page-navbar .left-menu .search image {
  width: 34rpx;
  height: 34rpx;

}

.left-menu .search-selet {
  position: absolute;
  background-color: white;
  width: 83%;
  left: 41rpx;
  bottom: -14px;
}

.page-navbar .right-menu {
  display: flex;
  padding-bottom: 10rpx;
  justify-content: flex-end;
  width: 35%;
  position: absolute;
  left: -50rpx;
  bottom: -14rpx;
}

.page-navbar .right-menu .section {
  border-radius: 50rpx;
  width: 170rpx;
  height: 52rpx;
  border: 1rpx solid #0DD3B0;
  margin-right: 20rpx;
  text-align: center;
  margin: 0 20rpx 10rpx 0;
  color: white;
}


.page-navbar .right-menu .section .picker {
  width: 150rpx;
  height: 52rpx;
  font-size: 28rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding: 0 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.picker .icon {
  transform: rotate(180deg);
  display: inline-block;
  height: 34rpx;
  font-size: 22rpx;
  padding-right: 10rpx;
}

.mode-list {
  width: 100%;
  color: #6A6A6A;
  padding-bottom: 140rpx;
}


.no-con {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 600rpx;
  text-align: center;
}

.no-con image {
  width: 108rpx;
  height: 108rpx;
}

.no-con .tis-row {
  color: #CCCCCC;
  padding-top: 20rpx;
}

.mode-list .mode-card {
  background-color: white;
  margin: 20rpx 40rpx;
  padding: 30rpx 30rpx;
  border-radius: 10rpx;
  border: 1rpx solid white;
  display: flex;
  justify-content: space-between;
  position: relative;
  overflow: hidden;
}

.mode-card .right-button {
  position: absolute;
  right: -150rpx;
  top: 0rpx;
  height: 100%;
  width: 150rpx;
  display: flex;
  text-align: center;
}

.right-button .card-button-h {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #999999;
  width: 100%;
  color: white;
  font-size: 30rpx;
}


.mode-list .mode-card .card-info {
  display: flex;
  justify-content: space-between;
  padding-bottom: 20rpx;
}

.mode-list .mode-card .card-info .title {
  font-weight: bold;
  height: 42rpx;
  color: black;
}

.mode-list .mode-card .card-info .time {
  padding-top: 10rpx;
  font-size: 26rpx;

}


.card-info .info-right .card-button {
  display: flex;
  justify-content: flex-end;
  height: 42rpx;
  align-items: center;
}

.card-info .info-right .card-button button {
  width: 120rpx;
  font-size: 24rpx;
  font-weight: bold;
  padding: 0;
  color: #42A5F5;
  border-color: #42A5F5;
  border-radius: 30rpx;
}

.card-info .info-right .card-button .card-clo-button button {
  width: 80rpx;
  font-size: 24rpx;
  font-weight: bold;
  padding: 0;
  color: #FF0000;
  border-color: #FF0000;
  border-radius: 30rpx;
  margin-left: 10rpx;
}

.progress {
  display: flex;
  justify-content: space-between;
}

.progress .label {
  padding-bottom: 2rpx;
  color: black;
  font-size: 28rpx;
}

.progress progress {
  margin-top: 16rpx;
  border-radius: 20px;

  border: 1px solid #87E9D7;
}

.progress .bottom-row {
  font-size: 24rpx;
  margin-top: 14rpx;
  display: flex;
  align-items: center;
  height: 27rpx;
  justify-content: flex-end;
}



.progress .progress-box {
  width: 75%;
}

.progress .tis {
  width: 25%;
  text-align: right;
}