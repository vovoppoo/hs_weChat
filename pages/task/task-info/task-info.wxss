page {
  background-color: white;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

.container {
  position: absolute;
  top: 210rpx;
  bottom: 0;
  left: 0;
  right: 0;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.container.circular {
  top: 300rpx;
  width: 100%;
  height: 300rpx;
}

.container ec-canvas {
  width: 100%;
  height: 300rpx;
  background-color: white;
  border: 1rpx solid #F8F8F8;
  margin: 40rpx 0 20rpx;
}

.page-info-view {
  padding: 20rpx 30rpx 430rpx;
}

.page-info-view .title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.page-info-view .title-row .text {
  display: inline-block;
  color: #333333;
  font-weight: bold;
}



.page-info-view .title-row .title-button {
  width: 100rpx;
  font-size: 24rpx;
  font-weight: bold;
  padding: 0;
  color: #42A5F5;
  border-radius: 30rpx;
  border: 1rpx solid #42A5F5;
  text-align: center;
  line-height: 36rpx;
  margin-left: 20rpx;
}

.title-row .title-button.red {
  color: #FA5151;
  border-color: #FA5151;
}

.page-info-view .info-view {
  color: #999999;
}

.page-info-view .info-view .info-row {
  padding: 10rpx;
}

.kh-table-info {
  padding: 0 30rpx;
  color: #999999;
}

.kh-table-info .title {
  padding-bottom: 30rpx;
  color: #333333;
}

.kh-table-info .table-view {
  border: 1rpx solid #EEEEEE;
}

.kh-table-info .table-view .table-row {
  display: flex;
  justify-content: space-between;
}

.kh-table-info .table-view .table-row+.table-row {
  border-top: 1rpx solid #EEEEEE;
}

.kh-table-info .table-view .table-row .table-item {
  text-align: center;
  line-height: 50rpx;
  font-size: 28rpx;
  width: 100%;
  padding: 10rpx 0;
}


.kh-table-info .table-view .table-row .table-item.grey {
  background-color: #F4F7FD;
}

.kh-table-info .table-view .table-item+.table-item {
  border-left: 1rpx solid #EEEEEE;
}


.khinfo {
  padding: 30rpx 30rpx 40rpx;
}

.container .title {
  font-size: 36rpx;
  width: 100%;
  background-color: white;
}

.title {
  width: 100%;
  color: #333333;
  font-weight: bold;
  font-size: 34rpx;
  display: flex;
  justify-content: space-between;
  height: 40rpx;
  align-items: center;
}

.title .label {
  z-index: 5;
  width: 300rpx;
  position: absolute;
  font-size: 34rpx;
}

.title-back-icon {
  z-index: 1;
}

.title .button-go {
  color: #999999;
  display: flex;
  font-size: 28rpx;
  align-items: center;
}

.title .button-go image {
  width: 34rpx;
  height: 34rpx;

}

.info-view {
  font-size: 26rpx;
  width: 100%;
}

.info-view .info-row {
  display: flex;
  justify-content: space-between;
  padding: 50rpx 10rpx 0;
}

.info-view .info-row .info-item {
  text-align: center;
  width: 200rpx;
  padding-bottom: 20rpx;
}

.info-view .info-row .info-item .num {
  color: black;
  padding-bottom: 5rpx;
  font-size: 50rpx;
}