page {
  background-color: white;
}

.page-navbar {
  height: 70rpx;
  display: flex;
  align-items: flex-end;
  padding-bottom: 10rpx;
}

.page-navbar .left-menu {
  width: 50%;
}

.page-navbar .right-menu {
  display: flex;
  justify-content: flex-end;
  width: 50%;
}

.page-navbar .right-menu .section {
  /* background-color: white; */
  border-radius: 50rpx;
  width: 300rpx;
  height: 50rpx;
  /* border: 1rpx solid #D3E9F4; */
  margin-right: 20rpx;
  text-align: center;

}


.page-navbar .right-menu .section .picker {
  width: 280rpx;
  height: 52rpx;
  font-size: 28rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding: 0 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

.container {
  position: absolute;
  top: 540rpx;
  bottom: 0;
  left: 0;
  right: 0;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.container.circular {
  top: 900rpx;
  width: 100%;
  height: 300rpx;
}

.container ec-canvas {
  width: 94%;
  height: 300rpx;
  background-color: white;
  border-radius: 30rpx;
  border: 1rpx solid #F8F8F8;
  padding: 10rpx;
}



.container.info {
  top: 250rpx;
  background-color: white;
  padding: 10rpx 40rpx;
  border: 1rpx solid white;
  border-top-left-radius: 50rpx;
  border-top-right-radius: 50rpx;
  height: 200rpx;
}

.container.info .title {
  width: 100%;
  font-weight: bold;
  font-size: 34rpx;
}



.container.tb .title {
  font-weight: bold;
  font-size: 34rpx;
  width: 100%;
  padding-left: 80rpx;
  padding-top: 40rpx;

}

.info-view {
  font-size: 26rpx;
  width: 100%;
}

.info-view .info-row {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 10rpx;
}

.info-view .info-row .info-item {
  text-align: center;
  width: 150rpx;
}

.info-view .info-row .info-item .num {
  font-weight: bold;
  color: black;
  padding-bottom: 5rpx;
  font-size: 46rpx;
}