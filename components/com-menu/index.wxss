.com-menu {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: fixed;
  height: 100vh;
  width: 100%;
  background-color: rgb(0, 0, 0, 0.5);
  z-index: 999;
  align-items: flex-end;
  justify-content: center;
}

.com-menu .menu-view {
  width: 100%;
  padding-bottom: 15%;
  margin-bottom: var(--iphonex-fix-bottom);
}

.com-menu .menu-view .menu-item {
  text-align: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f2f2f2;
  background-color: white;
}

.dis {
  display: none !important;
}