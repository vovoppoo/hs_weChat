.com-menu {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: fixed;
  height: 100vh;
  width: 100%;
  background-color: rgb(0, 0, 0, 0.5);
  z-index: 888;
  align-items: flex-end;
  justify-content: flex-end;
}

.screen-view {
  position: fixed;
  width: 70%;
  height: 100vh;
  background-color: white;
  z-index: 999;
  margin-left: 30%;
  animation: myfirst 1s;
  -moz-animation: myfirst 1s;
  /* Firefox */
  -webkit-animation: myfirst 1s;
  /* Safari 和 Chrome */
  -o-animation: myfirst 1s;
  /* Opera */
}

.screen-view .screen-item {
  padding: 10rpx 20rpx;
  color: #828282;
  border-bottom: 1rpx solid #e0e7f5;
}

.screen-item .item-title {
  padding: 10rpx 0;
}

.screen-item .item-con {
  padding: 10rpx 10rpx 10rpx 28rpx;
}

.screen-item .item-con .item-con-button {
  border: 1rpx solid #F4F7FD;
  min-width: 100rpx;
  text-align: center;
  padding: 20rpx 10rpx;
  display: inline-block;
  margin: 0 20rpx 20rpx 0;
  font-size: 28rpx;
  background-color: #F4F7FD;
  position: relative;
}

.is-on-icon {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 32rpx;
  height: 32rpx;

  background: -webkit-linear-gradient(left top, transparent 50%, #0DD3B0 50%);
  background: -moz-linear-gradient(left top, transparent 50%, #0DD3B0 50%);
  background: -ms-linear-gradient(left top, transparent 50%, #0DD3B0 50%);
  background: -o-linear-gradient(left top, transparent 50%, #0DD3B0 50%);
  background: linear-gradient(left top, transparent 50%, #0DD3B0 50%);

}

.is-on-icon .icon {
  color: white;
  position: absolute;
  bottom: -2rpx;
  right: 2rpx;

}

.screen-item .item-con .item-con-button.is-on {
  color: #0ED3B0;
  border: 1rpx solid #b7f7eb;
  background-color: #b7f7eb;
}


.dis {
  display: none !important;

}

.dis-con {
  animation: myfirst2 1s;
  -moz-animation: myfirst2 1s;
  /* Firefox */
  -webkit-animation: myfirst2 1s;
  /* Safari 和 Chrome */
  -o-animation: myfirst2 1s;
  /* Opera */
  right: -70%;
  display: none !important;
}

@keyframes myfirst {
  from {
    right: -70%;
  }

  to {
    right: 0;
  }
}


@keyframes myfirst2 {
  from {
    right: 0;
  }

  to {
    right: -70%;
  }
}

.button-row {
  position: absolute;
  bottom: 20%;
  right: 30rpx;
  color: white;
  padding-bottom: var(--iphonex-fix-bottom);
}


.button-row .button {

  display: inline-block;
  padding: 20rpx 40rpx;

}

.button-row .button.left {
  border: 1rpx solid #F4F7FD;
  background-color: #F4F7FD;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  color: #828282;
}

.button-row .button.right {
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  border: 1rpx solid #0ED3B0;
  background-color: #0ED3B0;
  color: white;
}